<!--include header file-->
<%-include('include/_header.ejs')%>

<!--/include header -->

<main id="site-main">
    <div class="container">
        <div class="box-nav-d-flex-justify-between">
            <div class="filter">
                <a href="/"> <i class = "fa fa-angle-double-right"></i>All Users</a>
            </div>
        </div><div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
            <span class=" text-light">Update user account</span>

        </div>

        <form action="/" method="POST" id="update_user">
            <div class="new_user">
                <div class="form-group">
                    <label for="name" class="text-light">Name</label>
                    <input type="hidden" name = "id" value="">
                    <input type="text" name = "name" placeholder = "Enter name">
        
                </div>
                <div class="form-group">
                    <label for="email" class="text-light">Email</label>
                    <input type="text" name = "email" placeholder = "Enter email">
        
                </div>
                <div class="form-group">
                    <label for="gender" class="text-light">Gender</label>
                    <div class="radio inline">
                        <input type="radio"  id="radio-2" name = "gender" value="male">
                        <label for="radio-2" class="text-light">Male</label>
        
                    </div>
                    <div class="radio inline">
                        <input type="radio"  id="radio-3" name = "gender" value="female">
                        <label for="radio-3" class="text-light">Female</label>
        
                    </div>
                  
        
                </div>
                <div class="form-group">
                    <label for="status" class="text-light">Status</label>
                    <div class="radio inline">
                        <input type="radio" id="radio-4" name = "status" value="active">
                        <label for="radio-4" class="text-light">Active</label>
        
                    </div>
                    <div class="radio inline">
                        <input type="radio"  id = "radio-5" name = "status" value="inactive">
                        <label for="radio-5" class="text-light">Inactive</label>
        
                    </div>
                  
        
                </div>
                <div class="form-group">
                    <button type="submit" class="btn ">Save</button>
                </div>
            </div>
            
        </form>
        
    </div>
</main>

<!--include header file-->
<%-include('include/_footer.ejs')%>

<!--/include header -->
